# Example terraform variables for dev environment
# Copy to terraform.tfvars and modify as needed
# This file should NOT be committed to git

###########################
# Core Settings
###########################

environment = "dev"
aws_region  = "eu-central-1"
project     = "baller"

tags = {
  ManagedBy   = "Terraform"
  Environment = "Development"
  Project     = "Baller"
  Owner       = "DevTeam"
}

###########################
# DynamoDB Settings - Development Overrides
###########################

# Use PAY_PER_REQUEST for dev to avoid unnecessary costs
dynamodb_billing_mode = "PAY_PER_REQUEST"

# Shorter retention periods for dev
conversation_retention_days = 14
message_retention_days = 14
api_interaction_retention_days = 3
llm_interaction_retention_days = 3

###########################
# S3 Settings - Development Overrides
###########################

# More aggressive lifecycle rules for dev
s3_standard_ia_transition_days = 15
s3_glacier_transition_days = 30
s3_expiration_days = 90

###########################
# OpenSearch Settings - Development Overrides
###########################

# Smaller instance for dev
opensearch_instance_type = "t3.small.elasticsearch"
opensearch_instance_count = 1
opensearch_ebs_volume_size = 10